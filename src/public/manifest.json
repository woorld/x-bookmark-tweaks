{
  "name": "X Bookmark Tweaks",
  "version": "1.0.1",
  "description": "X（旧Twitter）のブックマーク機能を調整・拡張する機能群です。",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*"
      ],
      "matches": [
        "https://twitter.com/*"
      ]
    }
  ],
  "icons": {
    "512": "img/icon/icon512.png"
  }
}
